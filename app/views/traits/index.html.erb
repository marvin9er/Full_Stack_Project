<p id="notice"><%= notice %></p>

<%= link_to 'About', root_path %>
<%= link_to 'Races', races_url %>
<%= link_to 'Subraces', subraces_url %>
<%= link_to 'Traits', traits_url %>
<%= link_to 'Languages', languages_url %>

<h1>Traits</h1>

<table>
  <thead>
    <tr>
      <th>Index</th>
      <th>Races</th>
      <th>Subraces</th>
      <th>Name</th>
      <th>Desc</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @traits.each do |trait| %>
      <tr>
        <td><%= trait.races %></td>
        <td><%= trait.subraces %></td>
        <td><%= trait.name %></td>
        <td><%= trait.desc %></td>
        <td><%= link_to 'Show', trait %></td>
        <td><%= link_to 'Destroy', trait, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trait', new_trait_path %>
